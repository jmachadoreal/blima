{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "paths": {
      "type/*": ["src/@types/*"],
      "asset/*": ["src/assets/*"],
      "animation/*": ["src/assets/animations/*"],
      "component/*": ["src/components/*"],
      "config/*": ["src/configs/*"],
      "helper/*": ["src/helpers/*"],
      "route/*": ["src/routes/*"],
      "style/*": ["src/styles/*"],
      "service/*": ["src/services/*"],
      "view/*": ["src/views/*"],
      "context/*": ["src/contexts/*"]
    }
  }
}
